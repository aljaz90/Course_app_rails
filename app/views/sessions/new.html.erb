<div class="login">
    <div class="row">
        <div class="col s12">
            <h3 class="center-align">Log in</h3>
        </div>
    </div>
    <div class="row">
        <%= form_for(:sessions, :class => "col s12") do |f| %>
          <div class="row">
            <div class="input-field col s12">
              <%= f.email_field :email, :id => "email_inline", :required => true, :class => "validate" %>
              <label for="email_inline">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <%= f.password_field :password, id: "password", class: "validate" %>
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
              <div class="input-field col s12">
                  <%= f.button("Log in", type: :submit, :class => "waves-effect waves-light btn signup-btn", :style => "background-color: #0087ff;") %>
              </div>
          </div>
        <% end %>
    </div>
</div>