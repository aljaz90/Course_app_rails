<div class="row">
    <%= form_for @user, html: {class: "col s12"} do |f| %>
      <div class="row">
        <div class="input-field col s6">
          <%= f.text_field :first_name, :id => "first_name", :class => "validate" %>
          <label for="first_name">First Name</label>
        </div>
        <div class="input-field col s6">
          <%= f.text_field :last_name, :id => "last_name", :class => "validate" %>
          <label for="last_name">Last Name</label>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.email_field :email, :id => "email_inline", :class => "validate" %>
          <label for="email_inline">Email</label>
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col s12">
          <%= f.password_field :password, :id => "email_inline", :class => "validate" %>
          <input id="password" type="password" class="validate">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" type="password" class="validate">
          <label for="password">Confirm Password</label>
        </div>
      </div>
    <% end %>
</div>