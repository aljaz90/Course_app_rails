
<div class="row">
    <div class="col s12">
        <h3 class="center-align">Course Listings</h3>
    </div>
</div>

<div class="row">
    <% @courses.each do |course| %>
      <div class="col s12 m6 l4 xl3">
        <div class="card">
          <div class="card-image">
            <img src="<%=course.image%>">
            <span class="card-title"><%=course.name%></span>
            <% if !current_user || !(current_user.courses.include?(course))  %>
              <%= link_to '<i class="material-icons">add</i>'.html_safe, course_enroll_path(course_id: course.id), class: "btn-floating halfway-fab waves-effect waves-light", method: :post %>
            <% else %>
              <%= link_to '<i class="material-icons">play_arrow</i>'.html_safe, "#", class: "btn-floating halfway-fab waves-effect waves-light" %>
            <% end %>
          </div>
          <div class="card-content">
            <p><%=course.description%></p>
          </div>
        </div>
      </div>
    <% end %>
</div>



